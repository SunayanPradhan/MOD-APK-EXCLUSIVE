<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/design_list_logo"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:src="@drawable/android"
                app:riv_corner_radius="10dp"
                android:scaleType="centerCrop">

            </com.makeramen.roundedimageview.RoundedImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/design_list_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:maxLines="1"
                    android:text="MOD APK"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:lines="1">

                </TextView>

                <TextView
                    android:id="@+id/design_list_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:text="ANDROID"
                    android:textSize="15dp"
                    android:lines="1">

                </TextView>

                <TextView
                    android:id="@+id/design_list_appsize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="13 MB"
                    android:textColor="@color/black"
                    android:textSize="15dp">

                </TextView>

            </LinearLayout>


        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <android.widget.ImageButton
        android:id="@+id/design_list_download"
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:background="@drawable/download_bg"
        android:src="@drawable/ic_outline_file_download_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/constraint_layout"
        app:layout_constraintTop_toTopOf="parent">

    </android.widget.ImageButton>


</androidx.constraintlayout.widget.ConstraintLayout>